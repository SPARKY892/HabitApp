{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@library/*": ["src/library/*"],
      "@context/*": ["src/context/*"],
      "@features/*": ["src/features/*"],
      "@navigation/*": ["src/navigation/*"],
      "@assets/*": ["assets/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
